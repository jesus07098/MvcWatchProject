@using WatchStore.Models.CustomModels;
@model ProductouserModel;


@{
    ViewData["Title"] = "Producto";
}

<link rel="stylesheet" href="~/css/sliderproductocss.css" />

<div class="row">
    <div class="column">


        <!-- Slideshow container -->
        <div class="slideshow-container">

            <!-- Full-width images with number and caption text -->
            @foreach (var item in Model.Producto.Imagenesproducto)
            {

                <div class="mySlides ">
                    <img src="@item.urlimagen" style="width:100%">
                    <div class="text">Caption Text</div>
                </div>

            }
            <!-- Next and previous buttons -->
            <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
            <a class="next" onclick="plusSlides(1)">&#10095;</a>
        </div>
        <br>

        <!-- The dots/circles -->
        <div style="text-align:center">
            <span class="dot" onclick="currentSlide(1)"></span>
            <span class="dot" onclick="currentSlide(2)"></span>
            <span class="dot" onclick="currentSlide(3)"></span>
        </div>



    </div>
    <div class="column">
        <div class="infoproducto">
            <a>@Html.DisplayFor(model => model.Producto.Marca.nombremarca)</a>
            <h2>@Html.DisplayFor(model => model.Producto.pronombre)</h2>
            <p class="precioproducto">$@Html.DisplayFor(model => model.Producto.proprecio)</p>
            <p class="descripproducto">@Html.DisplayFor(model => model.Producto.prodescripcion)</p>

            @{

                var idpro = Model.Producto.productoID;

            }

            <form asp-action="Agregar">
                <input type="hidden" asp-for="Itemcarrito.usuarioID" value="5" />
                <input type="hidden" asp-for="Itemcarrito.productoID" value="@idpro" />
                <input type="hidden" asp-for="Itemcarrito.cantidadproducto" value="1" />

                <button type="submit" class="botonparaproductos">Agregar al carrito</button>


            </form>



        </div>
    </div>
</div>

